<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns:context="http://www.springframework.org/schema/context"
xmlns:p="http://www.springframework.org/schema/p"
xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-3.0.xsd">

<bean class="com.springcore.Student" name="student1">

	<property name="studentId">
		<value>03</value>
	</property>
	
	<property name="studentName">
		<value>Anshu Jaiswal</value>
	</property>
	<property name="studentAddress">
		<value>Bhopal</value>
	</property>	
	</bean>
	
	<!-- second bean for student class -->
	
	<bean class="com.springcore.Student" name="student2">
	
	<property name="studentId" value="18" />
	<property name="studentName" value="Dhruv" />
	<property name="studentAddress" value="Indore" />
	
	
	</bean>
	
	<!-- Third bean for student class using p schema -->
	
	<bean class="com.springcore.Student" name="student3" p:studentId="05" p:studentName="Ashish" p:studentAddress="Vidisha" />
	
	
	
</beans>  